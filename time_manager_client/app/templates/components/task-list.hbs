{{#each groups as |group|}}
  <div class="{{if group.underPreferredWorkingHours 'under-preferred-working-hours'}}">
    <h3>{{moment-format group.date}} - total: {{format-working-hours group.totalDuration}}</h3>
    <ul>
      {{#each group.tasks as |task|}}
        <li>
          {{#if me}}
            {{#link-to "dashboard.me.tasks.task.edit" task.id class="btn"}}
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            {{/link-to}}
          {{else}}
            {{#link-to "dashboard.users.user.tasks.task.edit" task.user.id task.id class="btn"}}
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            {{/link-to}}
          {{/if}}

          <button type="button" class="btn" {{action 'deleteTask' task}}>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>

          {{task.title}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/each}}
