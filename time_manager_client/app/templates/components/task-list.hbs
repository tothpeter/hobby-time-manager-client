{{#each groups as |group|}}
  <div class="{{if group.underPreferredWorkingHours 'under-preferred-working-hours'}}">
    <h3>{{moment-format group.date}} - total: {{group.totalDuration}}</h3>
    <ul>
      {{#each group.tasks as |task|}}
        <li>
          {{#link-to "me.tasks.task.edit" task.id class='btn'}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          {{/link-to}}
          <button type="button" class="btn" {{action 'deleteTask' task}}>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>

          {{task.title}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/each}}
