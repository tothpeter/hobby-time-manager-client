{{notification-container position="top-right"}}

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to "application" class="navbar-brand"}}Time Manager{{/link-to}}
    </div>

    <div class="collapse navbar-collapse">
      {{#if session.isAuthenticated}}
        <ul class="nav navbar-nav">
          <li>{{#link-to "dashboard.me.tasks"}}My tasks{{/link-to}}</li>
          {{#if (can 'manage users')}}
            <li>{{#link-to "dashboard.users"}}Users{{/link-to}}</li>
          {{/if}}
        </ul>
      {{/if}}

      <ul class="nav navbar-nav navbar-right">
        {{#if session.isAuthenticated}}
          <li>{{#link-to "dashboard.me"}}Profil{{/link-to}}</li>
          <li>
            <div class="navbar-form">
              <button class="btn btn-default" {{action "logout"}}>Logout</button>
            </div>
          </li>
        {{else}}
          <li>{{#link-to "login"}}Login{{/link-to}}</li>
          <li>{{#link-to "register"}}Register{{/link-to}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  {{outlet}}
</div>
