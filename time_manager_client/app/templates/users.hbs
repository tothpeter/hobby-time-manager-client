<h1>Users</h1>

{{#link-to "users.new" class='btn btn-primary'}}
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new user
{{/link-to}}
<br>
<br>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>E-mail</th>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each filteredUsers as |user|}}
        <tr>
          <td>
            {{#link-to "users.user.edit" user.id class='btn'}}
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            {{/link-to}}
            <button type="button" class="btn" {{action 'deleteUser' user}}>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
          </td>
          <td>{{user.email}}</td>
          <td>{{user.username}}</td>
          <td>{{user.firstName}}</td>
          <td>{{user.lastName}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
