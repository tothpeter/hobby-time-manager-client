{{date-range-picker
  label='Date range filter'
  start=startDate
  end=endDate
  applyAction=(action 'setDateRange')
  dateLimit=dateLimit
  format='YYYY-MM-DD'
  alwaysShowCalendars=true
}}

{{#link-to "users.user.tasks.new" model.firstObject.user.id class='btn btn-primary'}}
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new task
{{/link-to}}

{{task-list tasks=model me=false}}
